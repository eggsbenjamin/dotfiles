"	config

set statusline=%<%f%h%m%r%w%y%=%l/%L,%c\ %P\ \|\ %n
set nocompatible 
set number
set ruler
set showcmd
set relativenumber
set nowrap
set backspace=2
set shortmess+=c
set tabstop=2
set shiftwidth=2
set expandtab
set rtp+=~/.vim/bundle/Vundle.vim
set foldmethod=indent
set foldlevelstart=99

filetype off
syntax enable

call vundle#begin()
  " misc
  Plugin 'scrooloose/nerdtree'
  Plugin 'Shougo/neocomplete'

  " appearance
  Plugin 'fatih/molokai'

  " git
  Plugin 'airblade/vim-gitgutter'

  " go
  Plugin 'fatih/vim-go'
call vundle#end()

filetype plugin on

" plugin config

  " neocomplete
  let g:neocomplete#enable_at_startup = 1

  " appearance 
  let g:rehash256 = 1
  let g:molokai_original = 1
  colorscheme molokai 

  " nerdtree
  let NERDTreeShowHidden=1
  autocmd VimEnter *.go NERDTree .

  " vim-go
  let g:go_fmt_experimental = 1
